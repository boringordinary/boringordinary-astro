import { Picture } from "astro-imagetools/components";

const tiers = [
  {
    title: "Starter",
    description: "Industry-standard design quality",
    priceMonthly: 3995,
    features: [
      {
        features: [
          {
            title: "Time capacity",
            value: "60 hours",
          },
          {
            title: "Time capacity",
            value: "60 hours",
          },
        ],
      },
    ],
  },
  {
    title: "Pro",
    prominent: true,
    description: "Industry-standard design quality",
    priceMonthly: 7995,
    features: [
      {
        features: [
          {
            title: "Time capacity",
            value: "120 hours",
